  <script>
    const btn = document.getElementById("music-btn");
    const music = document.getElementById("bg-music");
    let playing = false;

    btn.addEventListener("click", () => {
      if (!playing) {
        music.play();
        btn.textContent = "üîá Stop Ambience";
      } else {
        music.pause();
        btn.textContent = "üîä Play Ambience";
      }
      playing = !playing;
    });
  </script>
